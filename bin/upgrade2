#!/bin/bash

set -e
export HOMEBREW_NO_AUTO_UPDATE=0

echo "==> Start indexing"
index-start

echo "==> Install App Store updates"
sudo m update install all

echo "==> Update APM"
apm update --no-confirm

echo "==> Prune APM"
apm prune --no-confirm

echo "==> Upgrade 'm'"
m --update

echo "==> Set volume"
m volume 0

# echo "==> Lock computer"
# m lock

echo "==> Clean trash"
m trash clean

echo "==> Update brew"
brew update

echo "==> Upgrade brew"
brew upgrade --fetch-HEAD --display-times || true

echo "==> Repair brew"
brew tap --repair

echo "==> Clean up brew"
brew cleanup --prune 7

# echo "==> Upgrade casks"
# brew cask fetch

echo "==> Upgrade casks"
brew cask upgrade

echo "==> Upgrade NPM (1)"
npm install -g npm

# echo "==> Upgrade NPM (2)"
# npm upgrade -g

echo "==> Clear NPM cache"
npm cache clean --force

echo "==> Clear Yarn cache"
yarn cache clean --force

echo "==> Upgrade rubygems"
gem install rubygems-update
update_rubygems
gem update --system

echo "==> Clean up old gems"
gem cleanup

echo "==> Upgrade pip"
pip-review --auto --local

# echo "==> Verify disk"
# m disk verify volume /Volumes/System
