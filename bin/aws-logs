#!/bin/bash

set -e

export AWS_PROFILE=clark-shared

saml2aws login --profile clark-shared --verbose
aws eks update-kubeconfig --name staging --alias clark-shared/staging
kubectl get pods -n core-wallet

# ask for input
read -p "Enter the pod name: " POD_NAME

kubectl -n core-wallet logs -f --tail=100 $POD_NAME
