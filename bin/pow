#!/usr/bin/env ruby

# Pow, version 0.1, 2011-04-09
# Copyright (c) 2011, Linus Oleander
# Released under the MIT licens

# Adds the current dir to ~/.pow and opens the browser.
# Pow: https://github.com/37signals/pow

path = `pwd`.gsub(/\n/, "")
raw = path.split("/").last

if system("cd ~/.pow && ln -sf #{path} #{raw.downcase}")
  puts "'#{raw}' was added."
else
  puts "'#{raw}' already exists."
end

system "open \"http://#{raw.downcase}.dev\""


