#!/bin/bash

export HOMEBREW_NO_AUTO_UPDATE=0

echo "==> Set volume"
m volume 0

echo "==> Lock computer"
m lock

echo "==> Clean trash"
m trash clean

echo "==> Start indexing"
index-start

echo "==> Update brew"
brew update

echo "==> Upgrade brew"
brew upgrade --fetch-HEAD --display-times

echo "==> Repair brew"
brew tap --repair

echo "==> Clean up brew"
brew cleanup --prune 7

echo "==> Upgrade casks"
brew cask fetch

echo "==> Upgrade casks"
brew cask upgrade

echo "==> Upgrade NPM"
npm install -g npm

echo "==> Upgrade NPM"
npm upgrade -g

echo "==> Clear NPM cache"
npm cache clean --force

echo "==> Clear Yarn cache"
yarn cache clean --force

echo "Upgrade rubygems"
gem install rubygems-update
update_rubygems
gem update --system

echo "==> Clean up old gems"
gem cleanup

echo "==> Upgrade pip"
pip-review --auto --local
