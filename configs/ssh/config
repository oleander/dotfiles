Host *
    ForwardAgent yes
    PermitLocalCommand yes
    LocalCommand ssh -o PermitLocalCommand=no %n "[[ -d ~/.dotfiles ]] && echo "Updating dotfiles on %h ..." && cd ~/.dotfiles && git pull --autostash"

Host homeassistant
  HostName homeassistant.local
  ServerAliveInterval 600
  ConnectTimeout 120
  User root
