Host *
    ForwardAgent yes
    PermitLocalCommand yes
    LocalCommand bash -c 'which git >/dev/null && [[ -d ~/.dotfiles ]] && { cd ~/.dotfiles && git pull -q && ./install >/dev/null; }'

Host homeassistant
  HostName homeassistant.local
  IdentityFile ~/.ssh/id_ed25519
  ServerAliveInterval 600
  ConnectTimeout 120
  User root
