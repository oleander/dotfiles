Host *
  ForwardAgent yes
  LocalCommand ssh -o PermitLocalCommand=no %n "bash -c 'curl -s https://raw.githubusercontent.com/oleander/dotfiles/main/scripts/ssh-dotfiles-update.sh | bash'" >/dev/null 2>&1
  ServerAliveInterval 600
  ConnectTimeout 120
  PermitLocalCommand yes

Host homeassistant
  HostName homeassistant.local
  User root

Host mini
  HostName mini.local
  User linus
