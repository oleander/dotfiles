Host *
    ForwardAgent yes
    PermitLocalCommand yes
    LocalCommand ssh -o PermitLocalCommand=no %n "which git >/dev/null && ([[ -d ~/.dotfiles ]] && (echo "Updating dotfiles on %h ..." && cd ~/.dotfiles && git pull -q && ./install >/dev/null) || (echo "Installing dotfiles on %h ..." && git clone -q https://github.com/oleander/dotfiles && ./.dotfiles/install >/dev/null))"

Host homeassistant
  HostName homeassistant.local
  IdentityFile ~/.ssh/id_ed25519
  ServerAliveInterval 600
  ConnectTimeout 120
  User root
