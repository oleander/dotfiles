    name = Linus Oleander

[credential "https://github.com"]
	helper = !/opt/homebrew/bin/gh auth git-credential

[push]
    autoSetupRemote = true
    default = current

[init]
	defaultBranch = main

[pull]
    rebase = true

[branch]
    autosetuprebase = always

[color]
    branch = auto
    status = auto
    diff = auto
    ui = auto

[sequence]
    # Avoids the prompt to edit the commit message
    editor = true

[merge]
    conflictStyle = zdiff3
	ff = true

[rebase]
    autoStash = true
    updateRefs = true
    autosquash = true

[apply]
    whitespace = fix

[fetch]
    # Remove remote-tracking refs deleted upstream
    prune = true
    pruneTags = true
    negotiationAlgorithm = skipping

[checkout]
    autoDetach = true

[tag]
