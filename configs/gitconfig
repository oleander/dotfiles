[core]
    excludesFile = ~/.gitignore
    autocrlf = false
    fileMode = false

[user]
    email = 220827+oleander@users.noreply.github.com
    name = Linus Oleander

[credential "https://github.com"]
	helper = !/opt/homebrew/bin/gh auth git-credential

[push]
    autoSetupRemote = true
    default = current

[init]
	defaultBranch = main

[pull]
    rebase = false

[color]
    branch = auto
    status = auto
    diff = auto
    ui = auto

[sequence]
    # Avoids the prompt to edit the commit message
    editor = true

[merge]
    # Auto commit the merge
    commit = true
	ff = true

[rebase]
    autoStash = false

[branch]
    # Track upstream w/ rebase default
    autosetuprebase = always

[apply]
    whitespace = fix

[fetch]
    # Remove remote-tracking refs deleted upstream
    prune = true

[checkout]
    # Avoid detached HEAD on checkout
    autoDetach = false

[tag]
    sort = version:refname

[rerere]
	enabled = true
	autoupdate = true
	trainer = true

[advice]
	diverging = false

[submodule]
    recurse = true
    ignore = dirty
