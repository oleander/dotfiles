[core]
    fsmonitor = true
    excludesFile = ~/.gitignore
    autocrlf = false
    fileMode = false
    pager = cat

[gc]
    writeCommitGraph = true

[feature]
    manyFiles = true

[user]
    email = 220827+oleander@users.noreply.github.com
    name = Linus Oleander

[alias]
    ai = commit -a --no-edit

[credential "https://github.com"]
	helper =
	helper = !/opt/homebrew/bin/gh auth git-credential

[push]
    autoSetupRemote = true
    default = current

[init]
	defaultBranch = main

[pull]
    rebase = true

[branch]
    autosetuprebase = always

[color]
    branch = auto
    status = auto
    diff = auto
    ui = auto

[sequence]
    # Avoids the prompt to edit the commit message
    editor = true

[merge]
    conflictStyle = zdiff3
	ff = true

[rebase]
    autoStash = true
    updateRefs = true
    autosquash = true

[apply]
    whitespace = fix

[fetch]
    # Remove remote-tracking refs deleted upstream
    prune = true
    pruneTags = true
    negotiationAlgorithm = skipping

[checkout]
    autoDetach = true

[tag]
    sort = version:refname

[rerere]
	enabled = true
	autoupdate = true
	trainer = true

[advice]
	diverging = false
    statusHints = false
    detachedHead = false
    skippedCherryPicks = false

[submodule]
    recurse = true
    ignore = dirty

[diff]
    mnemonicPrefix = true
    compactionHeuristic = true
    submodule = log

[status]
    submoduleSummary = true

[safe]
    directory = '*'
[credential "https://gist.github.com"]
	helper =
	helper = !/opt/homebrew/bin/gh auth git-credential
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
