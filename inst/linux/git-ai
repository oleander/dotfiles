#!/bin/bash -e

test -n "$QUICK" && exit 0

if ! command -v cargo &>/dev/null; then
    echo "Installing rust/cargo..."
    if command -v apt-get &>/dev/null; then
        sudo apt-get update
        sudo apt-get install -y rust-all
    elif command -v apk &>/dev/null; then
        apk update
        apk upgrade musl
        apk add --no-cache rust cargo
    else
        echo "No supported package manager found (tried apt-get and apk)"
        exit 1
    fi
fi

# Install make using the appropriate package manager
if command -v apt-get &>/dev/null; then
    sudo apt-get update
    sudo apt-get install -y make
elif command -v apk &>/dev/null; then
    apk add --no-cache make
else
    echo "No supported package manager found (tried apt-get and apk)"
    exit 1
fi

if ! command -v cargo-binstall &>/dev/null; then
    echo "cargo-binstall is not installed"
    curl -L --proto '=https' --tlsv1.2 -sSf https://raw.githubusercontent.com/cargo-bins/cargo-binstall/main/install-from-binstall-release.sh | bash
fi

# Install git-ai
cargo binstall -y git-ai
