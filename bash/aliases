. ~/.zsh/aliases

# Git related stuff
alias gp='git_push_origin'
alias gph='git push heroku master'
alias gs='git status --ignore-submodules -s -b'
alias gph='git push heroku master'
alias gc='git checkout'
alias gcp='git cherry-pick'
alias gd='git diff --stat'
alias gb='git branch'
alias pull='git pull origin master'

# Ruby related stuff
alias v='ruby -v'                
alias b='bundle'
alias deploy='rake deploy:origin'
alias l='heroku logs | tail -n 100 | mate'
alias start='rvmsudo passenger start -p 80 --user=linus'

# Other
alias k='kill -9'
alias ee='mvim'
alias cs='nohup coffee -wco public/javascripts/ app/coffeescripts/*.coffee | noty > /dev/null & echo $! > tmp/pids/coffee.pid'
alias kcs='kill -9 `cat tmp/pids/coffee.pid` && echo "CoffeeScript pid `cat tmp/pids/coffee.pid` dÃ¶dad"'
alias flush='dscacheutil -flushcache'

# Reloads the all settings
alias s='source ~/.bash_profile'

# Edit specific files
alias ei='mate .gitignore'
alias e='mate ~/.dotfiles'

# Jumping to a dir
alias dot='cd ~/.dotfiles'
alias cr='cd /Users/linus/Documents/Projekt/'
alias r='cr && cd Rubyfy'
alias m='cr && cd Movify'

# SSH logins
# Should be moved to a .ssh/config file
alias chalmers="ssh -Y oleander@remote1.student.chalmers.se"
alias macmini="ssh linus@banan.olf.sgsnet.se"

# Updating the database for the locate command
alias update='sudo /usr/libexec/locate.updatedb'

function gg() {
  git add . && git commit -v -a -m "$*"
}

function burn(){
  avrdude -p m88 -c stk500 -P /dev/cu.PL2303-00004006 -e -U flash:w:main.rom
}

function compile(){
  avr-gcc -O1 main.c -mmcu=atmega88 -o main.rom -I /usr/local/CrossPack-AVR/include/simulavr/
}

# Skapar en mapp, hoppar sedan vidare till den
function take(){
  mkdir $1
  cd $1
}

function cb(){
  compile && burn
}

function not(){
  growlnotify -m "$*"
}

# http://stackoverflow.com/questions/520650/how-do-you-make-an-existing-git-branch-track-a-remote-branch
function gu(){
  git branch --set-upstream $1 origin/$1
}

# Togglar mellan de olika ruby-versionerna
function tt(){
  if [[ `ruby -v` == *1.9.2* ]]
  then
    rvm use 1.8.7 >> /dev/null
    echo "==> 1.8.7"
  else
    rvm use 1.9.2 >> /dev/null;
    echo "==> 1.9.2";
  fi
}